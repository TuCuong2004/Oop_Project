<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>

<AnchorPane prefHeight="510.0" prefWidth="769.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Run.WordSearchGameController">
   <children>
      <GridPane fx:id="gridPane" hgap="5" layoutX="50.0" layoutY="50.0" vgap="5">
      </GridPane>
      <Button fx:id="submitButton" layoutX="504.0" layoutY="98.0" mnemonicParsing="false" onAction="#handleSubmitButtonClick" prefHeight="32.0" prefWidth="103.0" styleClass="cmdGame-button" text="Submit" />
      <Label fx:id="foundWordsLabel" alignment="TOP_CENTER" layoutX="504.0" layoutY="136.0" prefHeight="275.0" prefWidth="225.0" styleClass="meaning-input" text="Đã thấy từ: " textAlignment="CENTER" />
      <Button fx:id="deleteWordButton" layoutX="618.0" layoutY="98.0" mnemonicParsing="false" onAction="#restartWord" prefHeight="32.0" prefWidth="111.0" styleClass="cmdGame-button" text="Xóa" />
      <Button fx:id="suggestWordButton" layoutX="618.0" layoutY="423.0" mnemonicParsing="false" onAction="#showSuggest" prefHeight="25.0" prefWidth="111.0" styleClass="add-button" text="Gợi ý" />
      <Button fx:id="restartGameButton" layoutX="364.0" layoutY="7.0" mnemonicParsing="false" onAction="#restartGame" prefHeight="25.0" styleClass="add-button" text="Tạo bảng mới" />
      <Label fx:id="scoreLabel" alignment="CENTER" layoutX="504.0" layoutY="423.0" prefHeight="33.0" prefWidth="81.0" styleClass="meaning-input" text="Điểm: 0" textAlignment="CENTER" />
      <ChoiceBox fx:id="gridSizeChoiceBox" layoutX="93.0" layoutY="7.0" styleClass="english-word-input" />
      <Label layoutX="19.0" layoutY="11.0" text="Kích thước:" />
      <Label layoutX="192.0" layoutY="11.0" text="Số từ:" />
      <ChoiceBox fx:id="numberOfWordsChoiceBox" layoutX="245.0" layoutY="7.0" styleClass="english-word-input" />
   </children>
</AnchorPane>
