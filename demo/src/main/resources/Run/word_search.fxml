<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>

<AnchorPane prefHeight="510.0" prefWidth="769.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Run.WordSearchController">
   <children>
      <GridPane fx:id="gridPane" hgap="5" layoutX="50.0" layoutY="50.0" vgap="5">
      </GridPane>
      <Button fx:id="submitButton" layoutX="520.0" layoutY="82.0" mnemonicParsing="false" onAction="#handleSubmitButtonClick" text="Submit" />
      <Label fx:id="foundWordsLabel" alignment="TOP_LEFT" layoutX="509.0" layoutY="134.0" prefHeight="275.0" prefWidth="225.0" text="Đã thấy từ: " />
      <Button fx:id="deleteWordButton" layoutX="622.0" layoutY="82.0" mnemonicParsing="false" onAction="#restartWord" text="Xóa" />
      <Button fx:id="highScoreButton" layoutX="504.0" layoutY="470.0" mnemonicParsing="false" onAction="#showHighScores" text="Điểm cao" />
      <Button fx:id="suggestWordButton" layoutX="640.0" layoutY="470.0" mnemonicParsing="false" onAction="#showSuggest" text="Gợi ý" />
      <Button fx:id="restartGameButton" layoutX="150.0" layoutY="24.0" mnemonicParsing="false" onAction="#restartGame" text="Tạo lại bảng" />
      <Label fx:id="scoreLabel" layoutX="504.0" layoutY="412.0" prefHeight="33.0" prefWidth="191.0" text="Điểm: 0" />
   </children>
</AnchorPane>
